<% provide :title, "Log in" %>
<div class="card login-form">
  <article class="card-body">
    <%= link_to  "Sign up", signup_path, class: "float-right btn btn-outline-primary" %>
    <h4 class="card-title mb-4 mt-1">Sign in</h4>
    <hr>
    <%= form_for :session, url: login_path do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "Username or Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "******" %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.submit "Login", class: "btn btn-primary btn-block"%>
          </div>
        </div>
        <div class="col-md-6 text-right">
          <%# render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
    <p>
      <%= link_to "#", class: "btn btn-block btn-outline-info" do %>
        <i class="fa fa-facebook-f"></i>
        Login via Gmail
      <% end %>
      <%= link_to "#", class: "btn btn-block btn-outline-primary" do %>
        <i class="fa fa-facebook-f"></i>
        Login via Facebook
      <% end %>
    </p>
  </article>
</div>
